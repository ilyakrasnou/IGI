@model FreeRock.Models.Artist

<h4>Artist</h4>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div id="select-artist">
    <label class="control-label">Select artist</label>
    <select asp-for="ID" class="form-control" asp-items="ViewBag.ArtistID">
        <option value="">-- Select artist --</option>
    </select>
    <span asp-validation-for="ID" class="text-danger" />
</div>
<div id="create-artist" hidden>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhotoPath" class="control-label"></label>
        <input asp-for="PhotoPath" class="form-control" />
        <span asp-validation-for="PhotoPath" class="text-danger"></span>
    </div>
</div>
<div>
    <input id="change-mode" type="button" value="or create new" onclick="changeMode()" />
</div>

<script type="text/javascript">
    changeMode = () => {
        var btnChange = $('#change-mode')
        var currMode = btnChange.val();
        var createArtist = $('#create-artist');
        var selectArtist = $('#select-artist');
        if (currMode == "or create new") {
            createArtist.attr("hidden", false);
            selectArtist.attr("hidden", true);
            btnChange.val("or select existed");
        } else if (currMode == "or select existed") {
            selectArtist.attr("hidden", false);
            createArtist.attr("hidden", true);
            btnChange.val("or create new");
        }
    }
</script>



