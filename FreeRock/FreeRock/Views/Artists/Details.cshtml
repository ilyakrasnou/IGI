@model FreeRock.Models.Artist

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<form asp-action="Details">
    <div>
        <h4>Artist</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.PhotoPath)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PhotoPath)
            </dd>
        </dl>
    </div>
    <table class="table">
        <tbody>
            @foreach (var album in Model.Albums.Where(a => a.IsVerified))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => album.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => album.ReleaseDate)
                    </td>
                    @if (User.IsInRole("admin"))
                    {
                        <td>
                            <a asp-controller="Albums" asp-action="Edit" asp-route-id="@album.ID">Edit</a> |
                            <a asp-controller="Albums" asp-action="Details" asp-route-id="@album.ID">Details</a> |
                            <a asp-controller="Albums" asp-action="Delete" asp-route-id="@album.ID">Delete</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a asp-controller="Albums" asp-action="Details" asp-route-id="@album.ID">Details</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
    <input hidden value="@Model.ID" name="id" id="id">

    <input hidden name="userName" id="userName" type="text" value="@User.Identity.Name">
    @if (User.Identity.IsAuthenticated)
    {
        <p><h5>Leave your comment:</h5></p>
        <p><textarea style="width: 500px; height: 100px;" name="NewCommentary" id="NewCommentary"></textarea></p>

        <div class="form-group">
            <input type="submit" value="Leave a commentary" class="btn btn-default" id="sendButton" />
        </div>
    }
</form>

@Html.Partial("_Comments")
