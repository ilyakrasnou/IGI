@model FreeRock.Models.Album

@{
    ViewData["Title"] = "Details";
    Artist artist = Model.Artist;
}

<h2>Details</h2>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd> 
        <dt>
            @Html.DisplayNameFor(model => artist.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => artist.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CoverPath)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CoverPath)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<table class="table">
    <tbody>
        @foreach (var song in Model.Songs.OrderBy(s => s.Number))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => song.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => song.YouTubeUrl)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
